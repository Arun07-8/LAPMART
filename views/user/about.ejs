<%- include("../../views/partials/user/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us - Lapmart Premium Laptops</title>
    <style>
        /* Reset only for this page content, not affecting header */
        .about-page * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .about-page {
            font-family: 'Georgia', 'Times New Roman', serif;
            line-height: 1.7;
            color: #2c2c2c;
            background-color: #ffffff;
        }

        .about-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .about-header {
            background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
            color: #2c2c2c;
            padding: 100px 0;
            text-align: center;
            position: relative;
            border-bottom: 3px solid #d4af37;
        }

        .about-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(212, 175, 55, 0.03) 0%, rgba(212, 175, 55, 0.08) 100%);
            z-index: 1;
        }

        .about-header-content {
            position: relative;
            z-index: 2;
        }

        .about-logo {
            font-size: 4rem;
            font-weight: 300;
            margin-bottom: 20px;
            color: #d4af37;
            text-shadow: 0 2px 4px rgba(212, 175, 55, 0.2);
            letter-spacing: 4px;
            font-family: 'Georgia', serif;
        }

        .about-tagline {
            font-size: 1.4rem;
            margin-bottom: 30px;
            color: #666;
            font-style: italic;
            font-weight: 300;
        }

        .about-main-content {
            background: #ffffff;
            margin: -50px auto 0;
            position: relative;
            z-index: 3;
            border-radius: 0;
            box-shadow: 0 0 60px rgba(212, 175, 55, 0.1);
            overflow: hidden;
        }

        .about-section {
            padding: 80px 60px;
            background: #ffffff;
        }

        .about-section:nth-child(even) {
            background: #fafafa;
        }

        .about-section h2 {
            color: #2c2c2c;
            font-size: 2.8rem;
            margin-bottom: 40px;
            text-align: center;
            position: relative;
            font-weight: 300;
            font-family: 'Georgia', serif;
        }

        .about-section h2::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 2px;
            background: linear-gradient(to right, #d4af37, #f4d03f);
            border-radius: 1px;
        }

        .about-section p {
            font-size: 1.2rem;
            margin-bottom: 25px;
            color: #555;
            text-align: center;
            max-width: 900px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.8;
        }

        .about-features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 40px;
            margin-top: 60px;
        }

        .about-feature-card {
            background: #ffffff;
            padding: 50px 40px;
            border-radius: 0;
            text-align: center;
            box-shadow: 0 10px 40px rgba(212, 175, 55, 0.1);
            transition: all 0.4s ease;
            border: 1px solid rgba(212, 175, 55, 0.1);
            position: relative;
            overflow: hidden;
        }

        .about-feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.05), transparent);
            transition: left 0.6s ease;
        }

        .about-feature-card:hover::before {
            left: 100%;
        }

        .about-feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 60px rgba(212, 175, 55, 0.15);
            border-color: #d4af37;
        }

        .about-feature-icon {
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, #d4af37, #f4d03f);
            border-radius: 50%;
            margin: 0 auto 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            box-shadow: 0 8px 20px rgba(212, 175, 55, 0.3);
        }

        .about-feature-card h3 {
            color: #2c2c2c;
            font-size: 1.6rem;
            margin-bottom: 20px;
            font-weight: 400;
            font-family: 'Georgia', serif;
        }

        .about-feature-card p {
            color: #666;
            font-size: 1.1rem;
            text-align: left;
            line-height: 1.6;
        }

        .about-stats-section {
            background: linear-gradient(135deg, #2c2c2c 0%, #1a1a1a 100%);
            color: white;
            padding: 100px 60px;
            text-align: center;
            position: relative;
        }

        .about-stats-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(212, 175, 55, 0.05) 0%, rgba(212, 175, 55, 0.1) 100%);
            z-index: 1;
        }

        .about-stats-content {
            position: relative;
            z-index: 2;
        }

        .about-stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 50px;
            margin-top: 60px;
        }

        .about-stat-item {
            text-align: center;
        }

        .about-stat-number {
            font-size: 3.5rem;
            font-weight: 300;
            margin-bottom: 15px;
            color: #d4af37;
            font-family: 'Georgia', serif;
        }

        .about-stat-label {
            font-size: 1.2rem;
            opacity: 0.9;
            font-weight: 300;
        }

        .about-cta-section {
            background: #d4af37;
            color: white;
            padding: 80px 60px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .about-cta-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.1) 100%);
            z-index: 1;
        }

        .about-cta-content {
            position: relative;
            z-index: 2;
        }

        .about-cta-button {
            display: inline-block;
            background: white;
            color: #d4af37;
            padding: 18px 50px;
            text-decoration: none;
            border-radius: 0;
            font-weight: 400;
            font-size: 1.2rem;
            margin-top: 30px;
            transition: all 0.4s ease;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            border: 2px solid transparent;
            font-family: 'Georgia', serif;
        }

        .about-cta-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.3);
            background: transparent;
            color: white;
            border-color: white;
        }

        .about-premium-highlight {
            background: linear-gradient(135deg, #f8f8f8 0%, #ffffff 100%);
            border-left: 4px solid #d4af37;
            padding: 40px;
            margin: 40px 0;
            font-style: italic;
            font-size: 1.3rem;
            color: #555;
            text-align: center;
            box-shadow: 0 5px 20px rgba(212, 175, 55, 0.1);
        }

        @media (max-width: 768px) {
            .about-logo {
                font-size: 2.8rem;
                letter-spacing: 2px;
            }
            
            .about-section {
                padding: 60px 30px;
            }
            
            .about-section h2 {
                font-size: 2.2rem;
            }
            
            .about-features-grid {
                grid-template-columns: 1fr;
            }
            
            .about-stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .about-feature-card {
                padding: 40px 30px;
            }
        }
    </style>
</head>
