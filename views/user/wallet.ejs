
<%- include("../../views/partials/user/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>lapmart -My Wallet Balance</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/userside-css/userside-css/sidebar.css" rel="stylesheet" type="text/css">
    <style>
        /* Scoped styles for wallet page - all styles prefixed with .wallet-app */
        .wallet-app * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .wallet-app {
            min-height: 100vh;
            padding: 20px;
            position: relative;
            isolation: isolate;
        }

        .wallet-app .wallet-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .wallet-app .wallet-page-title {
            font-size: 32px;
            font-weight: 700;
            color: #000000;
            margin-bottom: 40px;
            text-align: center;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .wallet-app .wallet-balance-card {
            background: linear-gradient(135deg, #000000 0%, #764ba2 100%);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.2),
                0 8px 20px rgba(255, 107, 107, 0.3);
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .wallet-app .wallet-balance-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%);
            animation: wallet-shine 3s infinite;
            pointer-events: none;
        }

        @keyframes wallet-shine {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .wallet-app .wallet-merchant-name {
            font-size: 14px;
            font-weight: 600;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 8px;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .wallet-app .wallet-balance-label {
            font-size: 16px;
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 20px;
            font-weight: 400;
        }

        .wallet-app .wallet-balance-amount {
            font-size: 56px;
            font-weight: 800;
            color: #ffffff;
            margin-bottom: 25px;
            text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 2;
        }

        .wallet-app .wallet-card-number {
            font-family: 'Courier New', monospace;
            font-size: 18px;
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 35px;
            letter-spacing: 6px;
            font-weight: 600;
        }

        .wallet-app .wallet-action-buttons {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .wallet-app .wallet-btn {
            padding: 12px 24px;
            border: none;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
        }

        .wallet-app .wallet-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

        .wallet-app .wallet-btn:active {
            transform: scale(0.98);
        }

        .wallet-app .wallet-transaction-section {
            margin-top: 0;
        }

        .wallet-app .wallet-section-title {
            font-size: 28px;
            font-weight: 700;
            color: #000000;
            margin-bottom: 30px;
            text-align: center;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .wallet-app .wallet-transaction-table {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.2),
                0 8px 20px rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(15px);
            padding: 20px;
        }

        .wallet-app .wallet-table-header {
            display: grid;
            grid-template-columns: 1.2fr 2fr 1fr 1.2fr 1.5fr 2fr 1fr;
            gap: 25px;
            padding: 20px 25px;
            background: linear-gradient(135deg, #000000 0%, #764ba2 100%);
            font-weight: 600;
            color: #ffffff;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-radius: 15px;
            margin-bottom: 15px;
            align-items: center;
        }

        .wallet-app .wallet-transaction-row {
            display: grid;
            grid-template-columns: 1.2fr 2fr 1fr 1.2fr 1.5fr 2fr 1fr;
            gap: 25px;
            padding: 25px;
            border-bottom: none;
            align-items: center;
            transition: all 0.3s ease;
            position: relative;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 15px;
            margin-bottom: 12px;
            min-height: 80px;
        }

        .wallet-app .wallet-transaction-row:hover {
            transform: translateX(5px) translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .wallet-app .wallet-transaction-row:last-child {
            margin-bottom: 0;
        }

        .wallet-app .wallet-transaction-row::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: linear-gradient(135deg, #000000 0%, #000000 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
            border-radius: 0 15px 15px 0;
        }

        .wallet-app .wallet-transaction-row:hover::before {
            opacity: 1;
        }

        .wallet-app .wallet-amount {
            font-weight: 700;
            font-size: 18px;
            color: #28a745;
            padding: 8px 0;
        }

        .wallet-app .wallet-amount.wallet-negative {
            color: #dc3545;
        }

        .wallet-app .wallet-type-badge {
            display: inline-block;
            padding: 8px 16px;
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
        }

        .wallet-app .wallet-type-badge.wallet-debit {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        }

        .wallet-app .wallet-transaction-id {
            font-family: 'Courier New', monospace;
            font-size: 13px;
            font-weight: 600;
            color: #495057;
            word-break: break-all;
            line-height: 1.4;
        }

        .wallet-app .wallet-payment-method {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 500;
            font-size: 14px;
            color: #495057;
        }

        .wallet-app .wallet-description {
            font-size: 14px;
            color: #495057;
            line-height: 1.4;
            word-wrap: break-word;
        }

        .wallet-app .wallet-date {
            font-size: 14px;
            color: #495057;
            font-weight: 500;
        }

        .wallet-app .wallet-view-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 10px 18px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            white-space: nowrap;
        }

        .wallet-app .wallet-view-btn:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

        /* Responsive Design Improvements */
        @media (max-width: 1200px) {
            .wallet-app .wallet-table-header,
            .wallet-app .wallet-transaction-row {
                grid-template-columns: 1.2fr 1.8fr 1fr 1.2fr 1.8fr 1fr;
                gap: 20px;
            }
            
            .wallet-app .wallet-table-header div:nth-child(5),
            .wallet-app .wallet-transaction-row div:nth-child(5) {
                display: none;
            }
        }

        @media (max-width: 992px) {
            .wallet-app .wallet-table-header,
            .wallet-app .wallet-transaction-row {
                grid-template-columns: 1.2fr 1.5fr 1fr 1.5fr 1fr;
                gap: 15px;
            }
            
            .wallet-app .wallet-table-header div:nth-child(4),
            .wallet-app .wallet-transaction-row div:nth-child(4),
            .wallet-app .wallet-table-header div:nth-child(5),
            .wallet-app .wallet-transaction-row div:nth-child(5) {
                display: none;
            }
        }

        @media (max-width: 768px) {
            .wallet-app .wallet-container {
                padding: 0;
            }
            
            .wallet-app .wallet-balance-card {
                padding: 30px 25px;
                margin-bottom: 30px;
                border-radius: 15px;
            }
            
            .wallet-app .wallet-balance-amount {
                font-size: 42px;
            }
            
            .wallet-app .wallet-page-title {
                font-size: 24px;
            }
            
            .wallet-app .wallet-section-title {
                font-size: 22px;
            }

            .wallet-app .wallet-table-header {
                display: none;
            }
            
            .wallet-app .wallet-transaction-row {
                display: block;
                padding: 25px;
                margin-bottom: 15px;
                border-radius: 15px;
                background: rgba(255, 255, 255, 0.95);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
                border: 1px solid rgba(255, 255, 255, 0.2);
                backdrop-filter: blur(10px);
            }

            .wallet-app .wallet-transaction-row > div {
                margin-bottom: 15px;
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 8px 0;
                border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            }

            .wallet-app .wallet-transaction-row > div:last-child {
                border-bottom: none;
                margin-bottom: 0;
            }

            .wallet-app .wallet-transaction-row > div:before {
                content: attr(data-label);
                font-weight: 600;
                color: #667eea;
                font-size: 12px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                min-width: 100px;
            }

            .wallet-app .wallet-view-btn {
                margin-top: 15px;
                width: 100%;
                justify-content: center;
                padding: 12px;
            }
        }

        /* Enhanced visual effects */
        .wallet-app .wallet-balance-card,
        .wallet-app .wallet-transaction-table {
            animation: wallet-fadeInUp 0.8s ease-out;
        }

        @keyframes wallet-fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes wallet-slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        /* Modal styles */
        .wallet-modal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            backdrop-filter: blur(5px);
        }

        .wallet-modal-content {
            background: white;
            padding: 30px;
            border-radius: 20px;
            max-width: 400px;
            width: 90%;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        .wallet-modal h3 {
            color: #667eea;
            margin-bottom: 20px;
            font-size: 24px;
        }

        .wallet-modal p {
            margin-bottom: 15px;
        }

        .wallet-modal button {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 25px;
            cursor: pointer;
            font-weight: 600;
            width: 100%;
        }

        /* Notification styles */
        .wallet-notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 25px;
            border-radius: 10px;
            font-weight: 600;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            animation: wallet-slideIn 0.3s ease-out;
        }

        /* Sidebar column styling */
        .wallet-sidebar-col {
            width: 352px;
            flex-shrink: 0;
        }

        .wallet-main-content-col {
            flex: 1;
            min-width: 0;
        }

        @media (max-width: 1200px) {
            .wallet-sidebar-col {
                width: 280px;
            }
        }

        @media (max-width: 992px) {
            .wallet-sidebar-col {
                width: 100%;
                margin-bottom: 20px;
            }
        }

        /* Pagination */
        .pagination-container {
            display: flex;
            justify-content: center;
            margin-top: 32px;
        }

        .pagination {
            justify-content: center;
            display: flex;
            padding-left: 0;
            list-style: none;
            border-radius: 0.25rem;
            gap: 6px;
        }

        .page-item .page-link {
            position: relative;
            display: block;
            padding: 12px 18px;
            margin-left: -1px;
            line-height: 1.25;
            color: #667eea;
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 6px;
            transition: all 0.2s;
            font-weight: 500;
            text-decoration: none;
        }

        .page-item .page-link:hover {
            z-index: 2;
            color: #764ba2;
            text-decoration: none;
            background-color: #f8f9fa;
            border-color: #dee2e6;
        }

        .page-item.active .page-link {
            z-index: 3;
            color: #fff;
            background-color: #667eea;
            border-color: #667eea;
        }

        .page-item.disabled .page-link {
            color: #6c757d;
            pointer-events: none;
            cursor: auto;
            background-color: #fff;
            border-color: #dee2e6;
        }

        /* No transactions message */
        .wallet-app .no-transactions {
            text-align: center;
            padding: 60px 30px;
            color: #6c757d;
            font-size: 16px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            margin: 20px 0;
        }

        .wallet-app .no-transactions i {
            font-size: 48px;
            margin-bottom: 20px;
            color: #dee2e6;
        }
    </style>
</head>
<body class="user-account-page">
    <div class="page-container">
        <div class="container-fluid">
            <div class="row">
                <!-- Include Sidebar Partial -->
                <div class="wallet-sidebar-col">
                    <%- include("../../views/user/partials/sidebar") %>
                </div>
                
                <!-- Main Content -->
                <div class="wallet-main-content-col">
                    <div class="main-content">
                        <div class="wallet-app">
                            <div class="wallet-container">
                                <h1 class="wallet-page-title">üí≥ My Wallet Balance</h1>
                                
                                <div class="wallet-balance-card">
                                    <div class="wallet-merchant-name">LAPKART</div>
                                    <div class="wallet-balance-label">Available Balance</div>
                                    <div class="wallet-balance-amount">‚Çπ<%=balance.toFixed(2) %></div>
                                    <div class="wallet-card-number">‚Ä¢‚Ä¢‚Ä¢‚Ä¢ ‚Ä¢‚Ä¢‚Ä¢‚Ä¢ ‚Ä¢‚Ä¢‚Ä¢‚Ä¢ 1234</div>
                                    
                                    <div class="wallet-action-buttons">
                                        <button class="wallet-btn wallet-btn-add">
                                            <span>üí∞</span> Add Money
                                        </button>
                                        <button class="wallet-btn wallet-btn-transfer">
                                            <span>üîÑ</span> Transfer
                                        </button>
                                    </div>
                                </div>
                                
                                <div class="wallet-transaction-section">
                                    <h2 class="wallet-section-title">üìä Transaction History</h2>
                                    
                                    <div class="wallet-transaction-table">
                                        <div class="wallet-table-header">
                                            <div>Amount</div>
                                            <div>Transaction ID</div>
                                            <div>Type</div>
                                            <div>Date</div>
                                            <div>Payment Method</div>
                                            <div>Description</div>
                                            <div>Details</div>
                                        </div>
                                        
                                        <% if (transactions && transactions.length > 0) { %>
                                            <!-- Display transactions directly from controller (already paginated and sorted) -->
                                            <% transactions.forEach(transaction => { %>
                                                <div class="wallet-transaction-row">
                                                    <div data-label="Amount:" class="wallet-amount <%= transaction.type === 'debit' ? 'wallet-negative' : '' %>">
                                                        <%= transaction.type === 'credit' ? '+' : '-' %>‚Çπ<%= transaction.amount.toFixed(2) %>
                                                    </div>
                                                    <div data-label="Transaction ID:" class="wallet-transaction-id"><%= transaction.transactionId %></div>
                                                    <div data-label="Type:">
                                                        <span class="wallet-type-badge <%= transaction.type === 'debit' ? 'wallet-debit' : '' %>">
                                                            <%= transaction.type.charAt(0).toUpperCase() + transaction.type.slice(1) %>
                                                        </span>
                                                    </div>
                                                    <div data-label="Date:" class="wallet-date"><%= new Date(transaction.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
                                                    <div data-label="Payment Method:" class="wallet-payment-method">
                                                        <span>
                                                            <%= transaction.description.includes('Refund') ? '‚Ü©Ô∏è' : 
                                                                transaction.description.includes('Card') ? 'üí≥' : 
                                                                transaction.description.includes('Bank') ? 'üè¶' : 
                                                                transaction.description.includes('UPI') ? 'üì±' : 
                                                                transaction.description.includes('Cashback') ? 'üí∏' : 'üí∞' %>
                                                        </span>
                                                        <%= transaction.description.includes('Refund') ? 'Refund' : 
                                                            transaction.description.includes('Card') ? 'Card Payment' : 
                                                            transaction.description.includes('Bank') ? 'Bank Transfer' : 
                                                            transaction.description.includes('UPI') ? 'UPI Payment' : 
                                                            transaction.description.includes('Cashback') ? 'Cashback' : 'Other' %>
                                                    </div>
                                                    <div data-label="Description:" class="wallet-description"><%= transaction.description || 'No description' %></div>
                                                    <div data-label="Details:">
                                                        <button class="wallet-view-btn" data-transaction-id="<%= transaction.transactionId %>">üëÅÔ∏è View</button>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        <% } else { %>
                                            <div class="no-transactions">
                                                <i class="fas fa-receipt"></i>
                                                <div>No transactions found</div>
                                            </div>
                                        <% } %>
                                    </div>

                                    <!-- Pagination using totalPages from controller -->
                                    <% if (totalPages > 1) { %>
                                        <div class="pagination-container">
                                            <nav aria-label="Page navigation">
                                                <ul class="pagination">
                                                    <!-- Previous Button -->
                                                    <% if (currentPage > 1) { %>
                                                        <li class="page-item">
                                                            <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                                                                <i class="fas fa-chevron-left"></i>
                                                            </a>
                                                        </li>
                                                    <% } else { %>
                                                        <li class="page-item disabled">
                                                            <span class="page-link"><i class="fas fa-chevron-left"></i></span>
                                                        </li>
                                                    <% } %>

                                                    <!-- Page Numbers -->
                                                    <% 
                                                        let startPage = Math.max(1, currentPage - 2);
                                                        let endPage = Math.min(totalPages, startPage + 4);
                                                        
                                                        // Adjust if we're near the end
                                                        if (endPage - startPage < 4) {
                                                            startPage = Math.max(1, endPage - 4);
                                                        }
                                                        
                                                        for (let i = startPage; i <= endPage; i++) { 
                                                    %>
                                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                                        </li>
                                                    <% } %>

                                                    <!-- Next Button -->
                                                    <% if (currentPage < totalPages) { %>
                                                        <li class="page-item">
                                                            <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                                                                <i class="fas fa-chevron-right"></i>
                                                            </a>
                                                        </li>
                                                    <% } else { %>
                                                        <li class="page-item disabled">
                                                            <span class="page-link"><i class="fas fa-chevron-right"></i></span>
                                                        </li>
                                                    <% } %>
                                                </ul>
                                            </nav>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Enhanced interactive functionality with scoped selectors
        document.querySelectorAll('.wallet-app .wallet-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
                
                const btnText = this.textContent.trim();
                if (btnText.includes('Add Money')) {
                    showWalletNotification('üí∞ Add Money feature coming soon!');
                } else if (btnText.includes('Transfer')) {
                    showWalletNotification('üîÑ Transfer feature coming soon!');
                }
            });
        });

        document.querySelectorAll('.wallet-app .wallet-view-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const row = this.closest('.wallet-transaction-row');
                const amount = row.querySelector('.wallet-amount').textContent;
                const transactionId = row.querySelector('.wallet-transaction-id').textContent;
                const date = row.querySelector('.wallet-date').textContent;
                const description = row.querySelector('.wallet-description').textContent;
                
                showWalletTransactionModal(amount, transactionId, date, description);
            });
        });

        function showWalletNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'wallet-notification';
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        function showWalletTransactionModal(amount, transactionId, date, description) {
            const modal = document.createElement('div');
            modal.className = 'wallet-modal';
            
            modal.innerHTML = `
                <div class="wallet-modal-content">
                    <h3>Transaction Details</h3>
                    <p><strong>Amount:</strong> ${amount}</p>
                    <p><strong>Transaction ID:</strong> ${transactionId}</p>
                    <p><strong>Date:</strong> ${date}</p>
                    <p><strong>Description:</strong> ${description}</p>
                    <button onclick="this.closest('.wallet-modal').remove()">Close</button>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            modal.onclick = function(e) {
                if (e.target === modal) {
                    modal.remove();
                }
            };
        }
    </script>
