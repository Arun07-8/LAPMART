    <h2 class="section-header animate-on-scroll">New Arrivals</h2>
    <section class="product-grid" aria-label="New Arrivals">
        <% if (Array.isArray(product) && product.length > 0) { %>
            <% product.forEach((product) => { %>
                <article class="product-card animate-on-scroll">
                    <a href="/productview?id=<%= product._id %>" aria-label="View details for <%= product.productName || 'Unnamed Product' %>">
                        <div class="product-image-container">
                            <% if (product.offerPercentage > 0) { %>
                                <div class="offer-badge"><%= product.offerPercentage %>% OFF</div>
                            <% } %>
                            <img class="product-image" 
                                 src="<%= product.productImage && product.productImage[0] ? product.productImage[0] : '/img/placeholder.jpg' %>" 
                                 alt="<%= product.productName ? product.productName + ' laptop' : 'Laptop product image' %>">
                        </div>
                        <div class="product-details">
                            <div class="product-brand">Laptmart</div>
                            <h3 class="product-title">
                                <%= product.productName || 'Unnamed Product' %>
                            </h3>
                            <div class="product-rating">
                                <div class="stars">
                                    <% const rating = product.rating || 5; %>
                                    <% const fullStars = Math.floor(rating); %>
                                    <% for(let i = 0; i < fullStars; i++) { %>
                                        <div class="star"></div>
                                    <% } %>
                                    <% for(let i = fullStars; i < 5; i++) { %>
                                        <div class="star empty"></div>
                                    <% } %>
                                </div>
                                <span class="rating-text"><%= rating %> (<%= product.reviewCount || 45 %> reviews)</span>
                            </div>
                            <div class="price-section">
                                <div class="price-container">
                                    <% if (product.offerPercentage > 0) { %>
                                        <span class="current-price">â‚¹<%= product.discountedPrice.toLocaleString('en-IN') %></span>
                                        <span class="original-price">â‚¹<%= product.salePrice.toLocaleString('en-IN') %></span>
                                        <span class="discount-percent"><%= product.offerPercentage %>% OFF</span>
                                    <% } else { %>
                                        <span class="current-price">â‚¹<%= product.salePrice.toLocaleString('en-IN') %></span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </a>
                </article>
            <% }) %>
        <% } else { %>
            <p class="no-products animate-on-scroll">No products available</p>
        <% } %>
    </section>


    <%- include("../../views/partials/user/footer") %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Navigation active state
            const logo = document.querySelector('.header-scope .logo');
            const navLinks = document.querySelectorAll('.header-scope .nav-link');
            
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    navLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                    
                    if (this.getAttribute('href') === '/home') {
                        logo.classList.add('home-active');
                    } else {
                        logo.classList.remove('home-active');
                    }
                });
            });

            if (window.location.pathname === '/home') {
                const homeLink = document.querySelector('.header-scope a[href="/"]');
                if (homeLink) {
                    homeLink.classList.add('active');
                    logo.classList.add('home-active');
                }
            }

            // Scroll-triggered animations
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.animate-on-scroll').forEach(el => {
                observer.observe(el);
            });

            // Banner Indicator Click
            document.querySelectorAll('.indicator').forEach((indicator, index) => {
                indicator.addEventListener('click', () => {
                    const slider = document.querySelector('.banner-slider');
                    slider.style.transform = `translateX(-${index * 100}%)`;
                    slider.style.animationPlayState = 'paused';
                    
                    setTimeout(() => {
                        slider.style.animationPlayState = 'running';
                    }, 3000);
                });
            });

            // Category Card Hover Effects
            document.querySelectorAll('.category-card').forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.style.background = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
                    card.style.color = 'white';
                    card.querySelector('.category-icon').style.transform = 'scale(1.2) rotate(5deg)';
                });
                
                card.addEventListener('mouseleave', () => {
                    card.style.background = '#f1f3f5';
                    card.style.color = '';
                    card.querySelector('.category-icon').style.transform = 'scale(1) rotate(0deg)';
                });
            });

            // Newsletter Form
            document.querySelector('.newsletter-form').addEventListener('submit', (e) => {
                e.preventDefault();
                const email = e.target.querySelector('input').value;
                alert(`Thank you for subscribing with ${email}!`);
                e.target.reset();
            });
        });
    </script>
</body>
</html>
