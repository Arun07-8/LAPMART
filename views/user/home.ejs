        }

        .newsletter h2 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            position: relative;
            z-index: 2;
        }

        .newsletter p {
            font-size: 1.3rem;
            color: #e5e7eb;
            margin-bottom: 3rem;
            position: relative;
            z-index: 2;
